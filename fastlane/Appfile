# Values that are used across *all* fastlane actions. Mostly dealing with account information

require 'dotenv'
$env_vars = Dotenv.parse("../.env")

def get_env(name)
  value = $env_vars[name]
  raise "Forgot to define #{name} in .env" unless value 

  return value 
end 

env = {
  :apple_email => get_env("APPLE_EMAIL"),
  :apple_team_name => get_env("APPLE_TEAM_NAME"),
  :apple_team_id => get_env("APPLE_TEAM_ID"),
  :app_bundle_id => get_env("APP_BUNDLE_ID")
}

app_identifier env[:app_bundle_id]

apple_id env[:apple_email]

team_name env[:apple_team_name]
team_id env[:apple_team_id]

itc_team_name env[:apple_team_name]
itc_team_id env[:apple_team_id]